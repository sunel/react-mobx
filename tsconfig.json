{
    "compilerOptions": {
        "experimentalDecorators": true,
        "allowJs": true,
        "baseUrl": ".",  // all paths are relative to the baseUrl
        "paths": {
            "~/*" : ["*"],   // resolve any `~/foo/bar` to `<baseUrl>/foo/bar`
            "modules/*": ["./src/modules/*"],
            "containers/*": ["./src/containers/*"],
            "components/*": ["./src/components/*"],
            "react-module": ["../react-module"],
        }
    }
}